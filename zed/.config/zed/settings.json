{
    "theme": "Andromeda",
    "features": {
        "copilot": false
    },
    "buffer_font_family": "Liga SFMono Nerd Font",
    "buffer_font_size": 14,
    "buffer_line_height": {
        "custom": 1.5
    },
    "ui_font_family": "Zed Mono",
    "ui_font_size": 15,
    "active_pane_magnification": 1.0,
    "vim_mode": false,
    "hover_popover_enabled": true,
    "confirm_quit": false,
    "cursor_blink": true,
    "show_completions_on_input": true,
    "show_completion_documentation": true,
    "show_wrap_guides": false,
    "use_on_type_format": true,
    "show_copilot_suggestions": false,
    "show_whitespaces": "selection",
    "calls": {
        "mute_on_join": false
    },
    "scrollbar": {
        "show": "system",
        "git_diff": true,
        "selections": true
    },
    "relative_line_numbers": false,
    "seed_search_query_from_cursor": "always",
    "inlay_hints": {
        "enabled": false,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true
    },
    "project_panel": {
        "default_width": 240,
        "dock": "left",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 10,
        "auto_reveal_entries": true
    },
    "collaboration_panel": {
        "button": false,
        "dock": "left",
        "default_width": 240
    },
    "chat_panel": {
        "button": false,
        "dock": "right",
        "default_width": 240
    },
    "notification_panel": {
        "button": true,
        "dock": "right",
        "default_width": 380
    },
    "assistant": {
        "button": false,
        "dock": "right",
        "default_width": 640,
        "default_height": 320,
        "default_open_ai_model": "gpt-4-1106-preview"
    },
    "show_call_status_icon": true,
    "enable_language_server": true,
    "autosave": "off",
    "tabs": {
        "git_status": true,
        "close_position": "left"
    },
    "remove_trailing_whitespace_on_save": false,
    "extend_comment_on_newline": true,
    "ensure_final_newline_on_save": false,
    "format_on_save": "off",
    "formatter": "auto", // Format files using Zed's Prettier integration (if applicable), or falling back to formatting via language server
    "soft_wrap": "none",
    "preferred_line_length": 120,
    "hard_tabs": false,
    "tab_size": 4,
    "telemetry": {
        "diagnostics": true,
        "metrics": true
    },
    "auto_update": false,
    "diagnostics": {
        "include_warnings": true
    },
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings",
        "**/.idea"
    ],
    "git": {
        "git_gutter": "tracked_files"
    },
    "copilot": {
        "disabled_globs": [
            ".env"
        ]
    },
    "terminal": {
        "shell": "system",
        "dock": "bottom",
        "default_width": 640,
        "default_height": 320,
        "working_directory": "current_project_directory",
        "blinking": "terminal_controlled",
        "alternate_scroll": "off",
        "option_as_meta": true,
        "copy_on_select": true,
        "env": {
            // "KEY": "value1:value2"
        },
        "line_height": {
            "custom": 1.2
        },
        "detect_venv": {
            "on": {
                "directories": [
                    ".env",
                    "env",
                    ".venv",
                    "venv"
                ],
                "activate_script": "default"
            }
        },
        "font_size": 12,
        "font_family": "Liga SFMono Nerd Font"
    },
    "semantic_index": {
        "enabled": true
    },
    "languages": {
        "Plain Text": {
            "soft_wrap": "preferred_line_length"
        },
        "Elixir": {},
        "Go": {},
        "Markdown": {
            "soft_wrap": "preferred_line_length"
        },
        "JavaScript": {},
        "TypeScript": {},
        "TSX": {},
        "YAML": {},
        "JSON": {}
    },
    // Zed's Prettier integration settings.
    // If Prettier is enabled, Zed will use this its Prettier instance for any applicable file, if
    // project has no other Prettier installed.
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": false,
        "singleQuote": true
    },
    // LSP Specific settings.
    "lsp": {}
}
