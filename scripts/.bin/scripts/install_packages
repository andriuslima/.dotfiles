#!/usr/bin/env zsh

RED='\033[0;31m'
GREEN='\033[0;32m'
NOCOLOR='\033[0m'
YELLOW='\033[1;33m'

function log() {
    level=$1
    message=$2
    if [[ $level = 'info' ]]; then
        echo -e "${GREEN}$message${NOCOLOR}"
    elif [[ $level = 'warning' ]]; then
        echo -e "${YELLOW}$message${NOCOLOR}"
    else
        echo -e "${RED}$message${NOCOLOR}"
    fi
}

log info '|||> Installing packages'

packages=(
    aws-sam-cli
    bat
    bun
    eza
    fzf
    git
    mas
    maven
    openssl
    python@3.12
    stow
    starship
    wget
    yarn
    zsh
)

casks=(
  docker
  miniconda
  visual-studio-code
  arc
  postman
)

mas=(
    462058435   # Microsoft Excel
    409201541   # Pages
    310633997   # WhatsApp
    409183694   # Keynote
    462062816   # Microsoft PowerPoint
    803453959   # Slack
    462054704   # Microsoft Word
    409203825   # Numbers
    975937182   # Fantastical
)

brew tap aws/tap
brew tap oven-sh/bun

brew install --quiet ${packages[@]}
brew install --quiet --cask ${casks[@]}
mas install ${mas[@]}
